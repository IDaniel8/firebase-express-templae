{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@models/*": ["./src/models/*"],
      "@router/*": ["./src/router/*"],
      "@db/*": ["./src/db/*"],
    },
  },
  "compileOnSave": true,
  "typeRoots": ["node_modules/@types"],
  "include": ["src/**/*", ".eslintrc.js", ".prettierrc.js"],
  "exclude": ["node_modules"]
}
